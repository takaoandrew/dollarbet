<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/black"
            android:textSize="24sp"
            android:background="@color/colorPrimary2"
            app:title="@string/app_title"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            >
            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_constraint_layout"
                tools:context="com.example.android.firebaseuserandmessageapplication.MainActivity">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/profile_image"
                    android:src="@drawable/ic_person_black_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_user"
                    android:layout_marginLeft="8dp"
                    style="@style/title"
                    android:text="Current user appears here"
                    app:layout_constraintTop_toBottomOf="@id/profile_image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_username"
                    android:text="Current username appears here"
                    app:layout_constraintTop_toBottomOf="@id/current_user"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bets_label"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/current_username"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/wins_label"
                    android:text="Bets"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wins_label"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    app:layout_constraintLeft_toRightOf="@id/current_username"
                    app:layout_constraintRight_toLeftOf="@id/current_username"
                    app:layout_constraintTop_toBottomOf="@id/current_username"
                    android:text="Wins"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/friends_label"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/wins_label"
                    app:layout_constraintTop_toBottomOf="@id/current_username"
                    android:text="Friends"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_bets_count"
                    app:layout_constraintLeft_toRightOf="@id/bets_label"
                    app:layout_constraintRight_toLeftOf="@id/bets_label"
                    app:layout_constraintTop_toBottomOf="@id/bets_label"
                    style="@style/bet_count"
                    android:text="0"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/won_bets_count"
                    app:layout_constraintLeft_toRightOf="@id/wins_label"
                    app:layout_constraintRight_toLeftOf="@id/wins_label"
                    app:layout_constraintTop_toBottomOf="@id/wins_label"
                    style="@style/bet_count"
                    android:text="0"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_friend_count"
                    app:layout_constraintLeft_toRightOf="@+id/friends_label"
                    app:layout_constraintRight_toLeftOf="@+id/friends_label"
                    app:layout_constraintTop_toBottomOf="@+id/friends_label"
                    style="@style/bet_count"
                    android:text="0"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lost_bets_count"
                    app:layout_constraintLeft_toRightOf="@id/won_bets_count"
                    android:visibility="gone"
                    style="@style/bet_count"
                    android:text="0"
                    android:textColor="@android:color/holo_red_dark"/>
                <Button
                    android:id="@+id/sign_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="gone"
                    android:text="Sign out"
                    android:onClick="signOut"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/received_message"
                    android:text="Message will appear hear"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/current_user"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/incoming_messages"
                    android:text="Incoming Bets"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    app:layout_constraintTop_toBottomOf="@id/total_bets_count"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/no_incoming_messages"
                    android:text="You have no incoming messages"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/incoming_messages"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <android.support.v7.widget.RecyclerView
                    android:translationZ="2dp"
                    android:id="@+id/rv_incoming_messages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/no_incoming_messages">
                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/accepted_messages"
                    android:text="Accepted Bets"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    app:layout_constraintTop_toBottomOf="@id/rv_incoming_messages"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/no_accepted_messages"
                    android:text="There are no accepted messages"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingBottom="32dp"
                    app:layout_constraintTop_toBottomOf="@id/accepted_messages"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <android.support.v7.widget.RecyclerView
                    android:translationZ="2dp"
                    android:id="@+id/rv_accepted_messages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/no_accepted_messages">
                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/friend_requests"
                    android:text="Friend Requests"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:visibility="gone"
                    android:layout_margin="16dp"
                    app:layout_constraintLeft_toLeftOf="parent" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/no_friend_requests"
                    android:background="@color/cardview_light_background"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/friend_requests"
                    android:text="@string/no_friend_requests"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_requests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/no_friend_requests">
                </android.support.v7.widget.RecyclerView>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/close_friends"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="invisible"
                    android:src="@drawable/ic_close_black_24dp"
                    android:onClick="closeFriends"/>

            </android.support.constraint.ConstraintLayout>

        </ScrollView>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_friend_fab_hint"
                android:text="@string/add_friend_fab_hint"
                android:layout_gravity="bottom|end"
                android:background="@color/white"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="@id/fab_add_friend"
                app:layout_constraintTop_toTopOf="@id/fab_add_friend"
                app:layout_constraintEnd_toStartOf="@id/fab_add_friend"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab_add_friend"
                app:fabSize="mini"
                android:src="@drawable/ic_person_add_black_24dp"
                android:visibility="gone"
                android:layout_gravity="bottom|end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="160dp"
                android:onClick="addFriend"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_proposition_fab_hint"
                android:text="@string/new_proposition_fab_hint"
                android:layout_gravity="bottom|end"
                android:background="@color/white"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="@id/fab_add_proposition"
                app:layout_constraintTop_toTopOf="@id/fab_add_proposition"
                app:layout_constraintEnd_toStartOf="@id/fab_add_proposition"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab_add_proposition"
                app:fabSize="mini"
                android:src="@drawable/ic_note_add_black_24dp"
                android:visibility="gone"
                android:layout_gravity="bottom|end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="90dp"
                android:onClick="addProposition"
                />
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab_add"
                app:fabSize="normal"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_gravity="bottom|end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                android:onClick="toggleAddOptions"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>
