<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_send_to_username_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipient_prompt"
        />
    <EditText
        android:id="@+id/et_recipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_send_to_username_prompt"
        android:hint="@string/recipient_hint"
        android:inputType="text"/>

</android.support.constraint.ConstraintLayout>